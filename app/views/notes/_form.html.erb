<div class="col-sm-4 col-sm-offset-4 space-top">
  <%= form_for(@note) do |f| %>
    <% if @note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

        <ul>
        <% @note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= 'To' %>
      <%= f.text_field :action %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :remind_date %><br>
      <%= f.date_select :remind_date %>
    </div>
    <div class="field">
      <%= "Done?" %><br>
      <%= f.check_box :status %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
