<div class="col-sm-6 col-sm-offset-3 space-top">
  <div class="title">
    <span class="glyphicon glyphicon-console" aria-hidden="true"></span> all of your reminders
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>To</th>
        <th>Source</th>
        <th>Remind date</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="space-around">
      <% @notes.each do |note| %>
        <tr>
          <td><%= note.action %></td>
          <td><%= note.description %></td>
          <td><%= note.remind_date %></td>
          <td><%= note.status %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, note %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_note_path(note) %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-fire" aria-hidden="true"></span>'.html_safe, note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Note', new_note_path, class: 'btn btn-default btn-md' %>
</div>
